{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/silveredgold/beta-protection/",
  "description": "A Chrome extension companion to the Beta Safety app, censoring NSFW images as you view them.",
  "web_accessible_resources": [{
    "resources": ["images/*", "*.js", "*.json", "*.jpg", "*.png", "*.gif", "*.mp4"],
    "matches": ["<all_urls>"]
  }],
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' data: ws:"
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "all_frames": false,
    "js": ["js/content-script.js"]
  }]
}